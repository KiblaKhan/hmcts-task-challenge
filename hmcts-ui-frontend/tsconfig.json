{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": [
      "es2020",
      "dom",
      "dom.iterable"
    ],
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "routes/*": [
        "src/main/routes/*"
      ],
      "router/*": [
        "src/main/router/*"
      ]
    }
  }
}